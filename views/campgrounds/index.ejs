<% layout('layouts/Boilerplate') -%>
    <h1 class="mt-3">All Campgrounds</h1>
    <button class="btn btn-success mb-3"><a href="/campgrounds/new" class="text-white text-decoration-none">Add Campground</a></button>
        <%for(let campground of campgrounds){%>
            <div class="card">
                <div class="row">
                    <div class="col-4">
                        <img src="<%=campground.images[0].url%>" class="card-img-top" alt="...">
                    </div>
                 <div class="col-8">
                 <div class="card-body">
                    <h5 class="card-title"><%=campground.title%></h5>
                    <p class="card-text"><%=campground.description%></p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">Go <%=campground.title%></a>
                  </div>
                </div>
              </div>
            </div>
        <%}%>

        